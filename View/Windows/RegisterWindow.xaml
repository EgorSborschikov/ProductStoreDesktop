<Window x:Class="ProductStoreDesktop.View.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductStoreDesktop.View.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="Регистрация" Height="480" Width="420">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация"
                   Style="{StaticResource PageTitleStyle}"
                   Grid.Row="0"
                   Margin="0,0,0,15"/>

        <!-- Имя пользователя -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Имя пользователя" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameInput" 
                     Margin="0,5,0,0"
                     MaxLength="50"
                     TabIndex="0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <TextBlock Text="Email" FontWeight="SemiBold"/>
            <TextBox x:Name="EmailInput" 
                     Margin="0,5,0,0"
                     MaxLength="100"
                     TabIndex="1"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,15,0,0">
            <TextBlock Text="Пароль" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordInput" 
                         Margin="0,5,0,0"
                         MaxLength="100"
                         TabIndex="2"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,15,0,0">
            <TextBlock Text="Повторите пароль" FontWeight="SemiBold"/>
            <PasswordBox x:Name="ConfirmPasswordInput" 
                         Margin="0,5,0,0"
                         MaxLength="100"
                         TabIndex="3"/>
        </StackPanel>

        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,30,0,0">
            <Button Content="Отмена"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="Cancel_Click"
                    Width="90"
                    Margin="0,0,10,0"/>
            <Button Content="Зарегистрироваться"
                    Click="Register_Click"
                    Width="159"/>
        </StackPanel>
    </Grid>
</Window>
