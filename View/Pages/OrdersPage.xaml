<Page x:Class="ProductStoreDesktop.View.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductStoreDesktop.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Заказы">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="История заказов" 
                   Style="{StaticResource PageTitleStyle}" 
                   Grid.Row="0" 
                   Margin="0,0,0,15"/>

        <ListView x:Name="OrdersListView" Grid.Row="1"
                  d:ItemsSource="{d:SampleData ItemCount=3}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="№ заказа" Width="100" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Дата" Width="140" DisplayMemberBinding="{Binding OrderDate, StringFormat='dd.MM.yyyy HH:mm'}"/>
                    <GridViewColumn Header="Сумма" Width="120" DisplayMemberBinding="{Binding TotalAmount, StringFormat={}{0:C}}"/>
                    <GridViewColumn Header="Статус" Width="120" DisplayMemberBinding="{Binding StatusName}"/>
                    <GridViewColumn Header="Действие" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Детали" Tag="{Binding Id}" Click="ViewOrderDetails_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
