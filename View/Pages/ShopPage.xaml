<Page x:Class="ProductStoreDesktop.View.Pages.ShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductStoreDesktop.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Магазин">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="SortComboBox" Width="150" SelectedIndex="0"
                      SelectionChanged="SortComboBox_SelectionChanged">
                <ComboBoxItem Content="По названию"/>
                <ComboBoxItem Content="По цене (возр.)"/>
                <ComboBoxItem Content="По цене (убыв.)"/>
            </ComboBox>

            <TextBlock Text="Категория:" VerticalAlignment="Center" Margin="30,0,10,0"/>
            <ComboBox x:Name="CategoryFilterComboBox" Width="180" SelectedIndex="0"
                      SelectionChanged="CategoryFilterComboBox_SelectionChanged">
                <ComboBoxItem Content="Все категории" Tag="-1"/>
                <!-- Остальные категории загружаются из БД -->
            </ComboBox>

            <Button Content="Обновить" Margin="20,0,0,0" Click="RefreshProducts_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsItemsControl"
                          d:ItemsSource="{d:SampleData ItemCount=3}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ProductCardStyle}">
                            <StackPanel>
                                <Image Source="{Binding ImageUrl}" Width="100" Height="100" Stretch="Uniform" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" 
                                           Foreground="{StaticResource PrimaryBrush}" Margin="0,5"/>
                                <Button Content="Добавить в корзину" 
                                        Tag="{Binding Id}"
                                        Click="AddToCart_Click"
                                        Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
