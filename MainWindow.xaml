<Window x:Class="ProductStoreDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductStoreDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Style="{StaticResource DefaultButtonStyle}" Content="Магазин" Margin="5" Click="NavigateToShop_Click"/>
                <Button Content="Корзина" Margin="5" Click="NavigateToCart_Click"/>
                <Button Content="Заказы" Margin="5" x:Name="OrdersButton" Click="NavigateToOrders_Click"/>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>

                <StackPanel Orientation="Horizontal" x:Name="AuthPanel">
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Войти" Margin="5" Click="OpenLogin_Click"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Регистрация" Margin="5" Click="OpenRegister_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" x:Name="ProfilePanel" Visibility="Collapsed">
                    <TextBlock Text="Здравствуйте, " VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserNameText" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <Button Style="{StaticResource DangerButtonStyle}" Content="Выход" Click="Logout_Click" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
